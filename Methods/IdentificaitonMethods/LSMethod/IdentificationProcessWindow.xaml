<Window x:Class="LSMethod.IdentificationProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculating..." Height="70" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black" Height="70">
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionColorKey}}"/>
            </Border.Background>
            <StackPanel Orientation="Vertical" Height="Auto">
                <Label Content="Calculating model..." HorizontalAlignment="Center" Margin="5" x:Name="calculatingLabel"/>
                <ProgressBar Height="20" Margin="5" x:Name="progressBar" />
            </StackPanel>

        </Border>
    </Grid>
</Window>
